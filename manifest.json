{
    "manifest_version": 3,
    "name": "Codeforces Calendar",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://codeforces.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://codeforces.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  